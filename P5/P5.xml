<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/companyName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="MY COMPANY"
    android:textAllCaps="true"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/employeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Linto emmanuel"
        android:textSize="18sp" />


<TextView
    android:id="@+id/jobTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Software Engineer"
    android:textSize="16sp"
    android:layout_below="@id/employeeName"
    android:layout_marginTop="8dp"
    android:layout_centerHorizontal="true" />

<View
    android:id="@+id/line"
    android:layout_width="200dp"
    android:layout_height="1dp"
    android:layout_below="@id/jobTitle"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:background="#000000" />


<TextView
    android:id="@+id/phone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Phone: +91 1234567890"
    android:layout_below="@id/line"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true" />


<TextView
    android:id="@+id/address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="123 Street, City, State"
    android:layout_below="@id/phone"
    android:layout_marginTop="8dp"
    android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="linto@gamil.com" />

<TextView
    android:id="@+id/website"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="www.mycompany.com"
    android:layout_below="@id/email"
    android:layout_marginTop="8dp"
    android:layout_centerHorizontal="true" />

</RelativeLayout>

